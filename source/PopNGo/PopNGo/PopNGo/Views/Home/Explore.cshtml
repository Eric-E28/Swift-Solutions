@{
    ViewData["Title"] = "Explore";
}

<div id="event-details-modal" class="modal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <img id="event-modal-img" src="~/media/images/placeholder_event_card_image.png" />
            <div id="modal-event-card-tags-container">
                <div class="event-modal-tag rounded-pill">Tag1</div>
                <div class="event-modal-tag rounded-pill">Tag2</div>
                <div class="event-modal-tag rounded-pill">Tag3</div>
                <div id="event-modal-bookmark-container" class="bg-white">
                    <img id="event-modal-bookmark-icon" src="/media/images/heart-outline.svg" alt="Bookmark event" />
                </div>
            </div>
            <h2 id="event-modal-title" class="event-modal-headers">Event title</h2>
            <div id="modal-event-description" class="event-modal-description-text">
                This is a descriptio ntest,  =is is  a descriptio ntest,This is a descriptio ntest,This is a descriptio ntest,This is a descriptio ntest,This is a descriptio ntest,This is a descriptio ntest,
            </div>

            <h5 class="event-modal-headers">Date & time</h5>
            <div id="event-modal-date" class="event-modal-description-text">
                04/21/2024 7pm
            </div>

            <h5 class="event-modal-headers">Location</h5>
            <div id="event-modal-location" class="event-modal-description-text">
                1234 Street st. NW Salem, Oregon 97123
            </div>
        </div>
    </div>
</div>



<partial name="EventSearch" />

<div class="container px-5">
    <div class="row">
        <div class="col-7">
            <div class="container px-5 text-light" id="events-container"></div>
        </div>
        <div class="col-5">
            <div id="map-container" style="position: fixed">
                <div id="demo-map-id">
                    <!-- Map goes here -->
                </div>
            </div>
        </div>
    </div>
</div>

@* back/next page buttons, and page number *@
<div class="pagination justify-content-center m-5">
    <button disabled id="previous-page-button" class="btn rounded-pill pagination-buttons">0</button>
    <div id="page-number" class="rounded-pill page-number">1</div>
    <button id="next-page-button" class="btn rounded-pill pagination-buttons">2</button>
</div>

<div class="container px-5 text-light" id="events-container"></div> 

@* This is to load the unauthorized modal that can be found in Shared/_LoginUnauthorizedModal.cshtml*@
<partial name="_LoginUnauthorizedModal" />

@* This is the container for the "toasts" that appear on the side of the screen when favoriting/unfavorating*@
<div id="toastContainer"></div>

@* Loads EventCard template component *@
<partial name="_EventCard" />

@section Scripts {
    <script type="module" src="~/js/explore.js" asp-append-version="true"></script>
}
