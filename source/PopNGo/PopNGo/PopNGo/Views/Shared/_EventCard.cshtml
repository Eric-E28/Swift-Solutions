@* Event card holding the image, date, title, location, tags, and a bookmark button *@

<template id="event-card-template">
    <div class="mb-2" id="event-card-container">
        <div id="img-container">
            <img id="event-card-image" src="https://via.placeholder.com/500" alt="Event Image" />
            <div id="date" class="bg-white">
                <div class="text-dark" id="day-number">14</div>
                <div class="text-dark" id="month">JUL</div>
            </div>
        </div>

        <div id="event-info-container">
            <div>
                <h3 id="event-card-title" class="text-light">PaintballPaintballPaintballPaintballPaintballPaintballPaintballPaintball</h3>
                <p id="event-card-location" class="text-light">Salem, Oregon</p>
            </div>
            <div id="event-tags-container">
                <div class="event-tag rounded-pill">Tag1</div>
                <div class="eventTag rounded-pill">Tag2</div>
                <div class="eventTag rounded-pill">Tag3</div>
            </div>
        </div>
        <div id="bookmark-container" class="bg-white"></div>
    </div>
</template>

<style>
    #img-container {
        display: flex;
        border-radius: 5px;
        width: 30%;
        height: 100%;
        object-fit: cover;
        background-color: #2e2e2e;
        position: relative;
    }

    #event-card-container {
        width: 100%;
        height: 200px;
        display: flex;
        flex-wrap: nowrap;
        border-radius: 20px;
        background-color: #1e1e1e;
        padding: 20px;
    }

    #date {
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        padding: 7%;
        border-radius: 15px 0px 15px 0px;
        box-shadow: 0px 0px 10px 0px #000000;
    }

    #event-card-image {
        border-radius: 15px;
        width: 100%;
        height: 100%;
        object-fit: cover;
        background-color: #2e2e2e;
        box-shadow: 0px 0px 10px 0px #000000;
    }

    #event-card-title {
        text-overflow: ellipsis;
        overflow: hidden;
    }

    #event-info-container {
        align-self: center;
        display: flex;
        flex: 1;
        width: 40%;
        height: 75%;
        padding: 0 3%;
        flex-direction: column;
        justify-content: space-between;
    }

    #event-tags-container {
        display: flex;
        flex-wrap: wrap;
    }

    .event-tag {
        background-color: lightcoral;
        padding: 0px 2% 0px 2%;
        margin-right: 5px
    }

    #bookmark-container {
        height: 15%;
        aspect-ratio: 1;
        border-radius: 50%;
    }
</style>